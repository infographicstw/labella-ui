doctype html
//- basic libraries: jquery(1.10.2), d3js(3.5.4), angularjs(1.2.3), bootstrap(3.0)/semantic-ui(0.9.3/0.9.5)
//-                  fontawesome(4.4.0), reactjs(0.14.0)
- var use = { cdn: true, og: true, favicon: true }
- var lib = { jquery: true, d3js: true, angular: true, bootstrap: true, semantic: false, fontawesome: true, reactjs: false }
- var assets = "assets"
- var favicon = "thumbnail.png"
- var title = "Labella GUI / infographics.tw"
- var og = {}
- og.title = title
- og.twitter = {type: "summary_large_image", site: "@infographicstw", creator: "@infographicstw"}
- og.domain = "infographics.tw"
- og.url = "http://infographics.tw"
- og.thumbnail = {width: 900, height: 450, type: "image/png"}
- og.thumbnail.url = "thumbnail.png"
- og.author = "infographicstw"
- og.section = "Taiwan"
- og.keyword = "data visualization,infographics,timeline,d3js"
- og.description = "A simple interface to quickly generate timeline based on labella and d3kit-timeline"
html(lang="en")
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    // libraries
    include library.jade
    // custom files
    link(rel="stylesheet",type="text/css",href="index.css")
    link(rel="stylesheet",type="text/css",href="ldcp.css")
    script(type="text/javascript",src="ldcp.min.js")
    script(type="text/javascript",src="papaparse.min.js")
    script(type="text/javascript",src="labella.min.js")
    script(type="text/javascript",src="d3kit.min.js")
    script(type="text/javascript",src="d3kit-timeline.js")
    script(type="text/javascript",src="index.js")
  body
    svg#svg
    #cpbtn.btn.btn-default Palette
    #input-area
      label 於下方填入資料
      textarea#data.form-control(rows="10")
